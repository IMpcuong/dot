syntax on
syntax enable

set nu
set encoding=utf-8 fileencoding=utf-8
set background=dark
set splitbelow

set noerrorbells novisualbell
set tabstop=2 softtabstop=2
set shiftwidth=2
set expandtab
set smartindent
set autoindent
set autoread
set nowrap
set smartcase
set showmatch
set noswapfile
set nobackup
set incsearch
set ff=unix
set mouse=a

inoremap <C-C> <esc>
vnoremap <C-C> <esc>
cnoremap <C-C> <esc>

autocmd BufWritePre * :%s/\s\+$//e
